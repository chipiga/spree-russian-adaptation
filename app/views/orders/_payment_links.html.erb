<% # TODO Refactor: make it shorter (another hook?) and payment_method.class.to_s.demodulize.downcase -> method_payment %>
<% if !@hide_payment_links # hide links for invoice
  and !@order_events # hide links for admin
  and !@order.paid? # hide links when order paid
  and @order.checkout.complete? # hide links until order complete
  and current_payment = @order.checkout.payments.last # hide links if no payment %>
  <%= render "orders/payment_links/#{current_payment.payment_method.class.to_s.demodulize.downcase}", :current_payment => current_payment %>
<% end %>